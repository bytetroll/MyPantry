<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="blueteam.mypantry.ui.btView_Home" android:id="@+id/LinearLayoutHome"
              android:weightSum="1">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_weight="0.14">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Pantry (Touch Me)"
                android:id="@+id/TextViewHomeToPantry" android:layout_weight="0.03" android:layout_marginLeft="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="(Touch Me) Shopping List"
                android:id="@+id/TextViewHomeToShoppingList" android:layout_gravity="right" android:layout_weight="0"
                android:layout_marginRight="5dp" android:layout_marginBottom="0dp"/>
    </TableRow>
    <Button
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:text="Add Product"
            android:id="@+id/ButtonAdd" android:layout_gravity="center_horizontal" android:layout_weight="0.14"
            android:layout_marginTop="400dp"/>
</LinearLayout>