<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="blueteam.mypantry.ui.btView_ShoppingList"
              android:id="@+id/LinearLayoutShoppingList" android:weightSum="1">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall" android:text="Home (Touch Me)"
              android:id="@+id/TextViewShoppingListToHome" android:layout_weight="0.14" android:layout_marginLeft="5dp"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:id="@+id/ListViewShoppingListContents"
        android:layout_gravity="center_horizontal" />
</LinearLayout>