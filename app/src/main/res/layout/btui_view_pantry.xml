<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="blueteam.mypantry.ui.btView_Pantry" android:id="@+id/LinearLayoutPantry">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall" android:text="(Touch Me) Home"
              android:id="@+id/TextViewPantryToHome" android:layout_weight="0.01"
              android:layout_gravity="right" android:layout_marginRight="5dp"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="415dp"
        android:id="@+id/PantryList"
        android:layout_gravity="center_horizontal" android:layout_weight="0.02"/>
</LinearLayout>