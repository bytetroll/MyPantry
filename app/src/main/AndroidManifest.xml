<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="blueteam.mypanty">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="blueteam.mypantry.ui.btViewContainer"
            android:label="MyPantry"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name="blueteam.mypantry.ui.viewcontainer.btView_Home"
                android:label="MyPantry"
                android:screenOrientation="portrait"
                android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>

        <activity
                android:name="blueteam.mypantry.ui.viewcontainer.btView_ShoppingList"
                android:label="AMyPantry"
                android:screenOrientation="portrait"
                android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>

        <activity
                android:name="blueteam.mypantry.ui.viewcontainer.btView_Pantry"
                android:label="MyPantry"
                android:screenOrientation="portrait"
                android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>

    </application>

</manifest>
